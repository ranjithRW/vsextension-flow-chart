{
  "name": "code-to-flowchart",
  "displayName": "Code to Flowchart",
  "description": "Convert your code into interactive Mermaid flowcharts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeToFlowchart.generate",
        "title": "Generate Flow Chart (Current File)"
      },
      {
        "command": "codeToFlowchart.generateFolder",
        "title": "Generate Flow Chart (Folder)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "generate-flow": "npm run compile && node ./out/generateFlow.js",
    "export-flow": "node ./scripts/export-mermaid.js"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.1.6"
  }
}
